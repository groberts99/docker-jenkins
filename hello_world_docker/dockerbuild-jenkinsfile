pipeline {
    agent {
        kubernetes {
            // Rather than inline YAML, in a multibranch Pipeline you could use: yamlFile 'jenkins-pod.yaml'
            // Or, to avoid YAML:
            // containerTemplate {
            //     name 'shell'
            //     image 'ubuntu'
            //     command 'sleep'
            //     args 'infinity'
            // }
            yaml '''
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: shell
    image: docker:latest
    command:
    - sleep
    args:
    - infinity
'''
            // Can also wrap individual steps:
            // container('shell') {
            //     sh 'hostname'
            // }
            defaultContainer 'shell'
        }
    }
    stages {
        stage('check_files') {
            steps {
              sh '''
                ls -l
              '''
            }
        }
        stage('build') {
            steps {
              sh '''
                docker build -t hello_there .
              '''
            }
        }
        stage('run') {
            steps {
              sh '''
                docker run --rm hello_there
              '''
            }
        }
    }
}
